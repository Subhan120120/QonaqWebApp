
@model OrderVM

<h1>Sifarişlər</h1>
<hr />
<div class="shadow mb-4">
    <table class="table table-hover table-bordered table-sm">
        <thead class="thead-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col"></th>
                <th scope="col">Məhsul Adı</th>
                <th scope="col">Qiyməti</th>
                <th scope="col">Sayı</th>
                <th scope="col">Toplam</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Customers)
            {
                <tr class="table-info">
                    <th scope="row">@item.Id</th>
                    <td colspan="4">@item.Name (@item.PhoneNumber) - @item.Address - @item.Description</td>
                    <td><a class="btn btn-outline-warning rounded-pill btn-sm float-right" asp-action="Sended" asp-route-id="@item.Id">Göndərildi</a></td>
                </tr>
                @foreach (var item2 in Model.Orders)
                {
                    if (item.Id == item2.CustomerId)
                    {
                        <tr>
                            <th colspan="2"></th>
                            <td>@item2.Product.ProductName</td>
                            <td>@item2.Product.Price</td>
                            <td>@item2.Quantity</td>
                            <td>@(item2.Product.Price * item2.Quantity)</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>
