    
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@inject IRepository<AppDetail> appDetailRepo
@{
    var appDetail = appDetailRepo.GetAll().FirstOrDefault();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@appDetail?.WebTitle</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Josefin+Sans:400,700">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Great+Vibes">
    <link rel="stylesheet" href="~/npm/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/npm/@@fortawesome/fontawesome-free/css/all.min.css" />
    <link rel="stylesheet" href="~/coffee/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="~/coffee/css/animate.css">
    <link rel="stylesheet" href="~/coffee/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/coffee/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/coffee/css/magnific-popup.css">
    <link rel="stylesheet" href="~/coffee/css/aos.css">
    <link rel="stylesheet" href="~/coffee/css/ionicons.min.css">
    <link rel="stylesheet" href="~/coffee/css/flaticon.css">
    <link rel="stylesheet" href="~/coffee/css/icomoon.css">
    <link rel="stylesheet" href="~/coffee/css/ftco-style.css">
    <link rel="stylesheet" href="~/coffee/css/customstyle.css">
    <link rel="stylesheet" href="~/coffee/css/hamburger-menu.css">
    @RenderSection("Styles", false)
</head>
<body>
    <!-- Start nav -->
    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
        <div class="container">
            <a class="navbar-brand" asp-action="Index" asp-controller="Home">
                <img src="~/coffee/images/qonaq-logo.svg" height="64" />
            </a>
            <!--hamburger menu -->
            <div class="menu navbar-toggler" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <label>
                    <input type="checkbox">
                    <svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="50" cy="50" r="22" />
                        <path class="line-1" d="M0 40h62c13 0 6 28-4 18L35 35" />
                        <path class="line-2" d="M0 50h70" />
                        <path class="line-3" d="M0 60h62c13 0 6-28-4-18L35 65" />
                    </svg>
                </label>
            </div>

            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav ml-auto" id="mynav">
                    <li is-active-route asp-controller="Menu" asp-action="Index" class="nav-item">
                        <a asp-controller="Menu" asp-action="Index" class="nav-link">MENYU</a>
                    </li>
                    <li is-active-route asp-controller="Reservation" asp-action="Reserve" class="nav-item">
                        <a asp-controller="Reservation" asp-action="Reserve" class="nav-link">REZERVASİYA</a>
                    </li>
                    <li is-active-route asp-controller="Home" asp-action="About" class="nav-item">
                        <a asp-controller="Home" asp-action="About" class="nav-link">HAQQIMIZDA</a>
                    </li>
                    <li is-active-route asp-controller="Service" class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="dropdown04" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">XİDMƏT</a>
                        <div class="dropdown-menu" aria-labelledby="dropdown04">
                            <a class="dropdown-item" asp-controller="Service" asp-action="DiscountCard">Endirim Kartları</a>
                            <a class="dropdown-item" asp-controller="Service" asp-action="Team">Komandamız</a>
                            <a class="dropdown-item" asp-controller="Service" asp-action="Customer">Müştərilərimiz</a>
                            <a class="dropdown-item" asp-controller="Service" asp-action="Feedback">Geridönüş</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="nav-link">Admin</a>
                    </li>
                    <li class="nav-item cart">
                        <a asp-controller="ShoppingCart" asp-action="Index" class="nav-link">
                            <span class="icon icon-shopping_cart"></span>
                            <span class="bag d-flex justify-content-center align-items-center">
                                <small>
                                    @await Component.InvokeAsync("CartCount")
                                </small>
                            </span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <partial name="_Culture">
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- END nav -->

    @RenderBody()
    <!-- Footer -->
    <footer class="ftco-footer ftco-section img">
        <div class="overlay"></div>
        <div class="container">
            <div class="row mb-5">
                <div class="col-lg-3 col-md-6 mb-5 mb-md-5">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">RESTORANIMIZ</h2>
                        <p>@appDetail?.About</p>
                        <ul class="ftco-footer-social list-unstyled float-md-left float-lft mt-3">
                            <li class="ftco-animate"><a href="@appDetail?.Twitter" target="_blank"><span class="icon-twitter"></span></a></li>
                            <li class="ftco-animate"><a href="@appDetail?.Facebook" target="_blank"><span class="icon-facebook"></span></a></li>
                            <li class="ftco-animate"><a href="@appDetail?.Instagram" target="_blank"><span class="icon-instagram"></span></a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-5 mb-md-5">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">SON BLOGLAR</h2>
                        <div class="block-21 mb-4 d-flex">
                            <a class="blog-img mr-4" style="background-image: url('/coffee/images/yenilik_1.png');"></a>
                            <div class="text">
                                <h3 class="heading"><a href="#">Cəbhədə yaranan gərginlik səbəbi ilə bu günki şou proqramı təxirə salırıq. Başın sağ olsun, VƏTƏN!</a></h3>
                                <div class="meta">
                                    <div><a href="#"><span class="icon-calendar"></span> Sept 15, 2018</a></div>
                                    <div><a href="#"><span class="icon-person"></span> Admin</a></div>
                                    <div><a href="#"><span class="icon-chat"></span> 19</a></div>
                                </div>
                            </div>
                        </div>
                        <div class="block-21 mb-4 d-flex">
                            <a class="blog-img mr-4" style="background-image: url('/coffee/images/yenilik_2.jpg');"></a>
                            <div class="text">
                                <h3 class="heading"><a href="#">Qarabağ - Galatasaray oyununu bizimlə izlə!</a></h3>
                                <div class="meta">
                                    <div><a href="#"><span class="icon-calendar"></span> Avq 15, 2020</a></div>
                                    <div><a href="#"><span class="icon-person"></span> Admin</a></div>
                                    <div><a href="#"><span class="icon-chat"></span> 12</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 mb-5 mb-md-5">
                    <div class="ftco-footer-widget mb-4 ml-md-4">
                        <h2 class="ftco-heading-2">TƏDBİRLƏRİMİZ</h2>
                        <ul class="list-unstyled">
                            <li><a href="#" class="py-2 d-block">Ad Günü</a></li>
                            <li><a href="#" class="py-2 d-block">Yığıncaq</a></li>
                            <li><a href="#" class="py-2 d-block">Görüş</a></li>
                            <li><a href="#" class="py-2 d-block">Party</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-5 mb-md-5">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">ÜNVANIMIZ</h2>
                        <div class="block-23 mb-3">
                            <ul>
                                <li><span class="icon icon-map-marker"></span><span class="text">@appDetail?.Address</span></li>
                                <li><a href="#"><span class="icon icon-phone"></span><span class="text">@appDetail?.PhoneNumber</span></a></li>
                                <li><a href="#"><span class="icon icon-envelope"></span><span class="text">@appDetail.EmailAddress</span></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer end-->
    <!-- loader -->
    <div id="ftco-loader" class="show fullscreen">
        <img src="~/coffee/images/qonaq-loading.svg" style="display: block; margin-left: auto; margin-right: auto;" />
    </div>
    <!-- loader end -->
    <!-- ScrollProgressBar -->
    <div class="disable-scroll" id="progressbar"></div>
    <div class="disable-scroll" id="scrollpath"></div>
    <!-- ScrollProgressBar end-->

    @*<script src="~/npm/jquery/dist/jquery.min.js"></script>*@
    <script src="~/coffee/js/jquery/dist/jquery.js"></script>
    <!-- <script src="~/coffee/js/bootstrap.min.js"></script> -->
    @*<script src="~/npm/bootstrap/dist/js/bootstrap.min.js"></script>*@
    <script src="~/npm/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/npm/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/npm/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/coffee/js/customjs.js"></script>
    <script src="~/coffee/js/jquery.waypoints.min.js"></script>
    <script src="~/coffee/js/owl.carousel.min.js"></script>
    <script src="~/coffee/js/aos.js"></script>
    <script src="~/coffee/js/jquery.animateNumber.min.js"></script>
    <script src="~/coffee/js/scrollax.min.js"></script>
    <script src="~/coffee/js/main.js"></script>


    @RenderSection("Scripts", false)

</body>
</html>
